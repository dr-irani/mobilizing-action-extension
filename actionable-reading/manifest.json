{
  "author": "Darius Irani, Yong (Emily) Dich, Lance Tan",
  "browser_action": {
    "default_icon": "img/default_icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "js": [
        "js/jquery-3.4.1.min.js",
        "js/popup.js",
        "js/material.min.js",
        "js/content.js"
      ],
      "css": ["css/style.css", "css/material.min.css"],
      "matches": ["http://*/*"]
    }
  ],

  "description": "Chrome extension that connects readers and suggests ways take action",
  "icons": {
    "128": "img/iconStore.png",
    "16": "img/icon.png",
    "48": "img/iconLauncher.png"
  },

  "manifest_version": 2,
  "name": "Actionable Reading",
  "permissions": ["activeTab"],
  "version": "1.0"
}
